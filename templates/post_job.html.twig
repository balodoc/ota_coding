{% extends 'base.html.twig' %}

{% block title %}Post a Job Â· Job Board{% endblock %}

{% block body %}
<h1>Post a Job</h1>
<form method="post" action="{{ path('post_job_submit') }}">
    <!-- Basic Job Information -->
    <div class="form-section">
        <h3>Basic Information</h3>
        <div>
            <label for="title">Job Title *</label><br>
            <input id="title" name="title" type="text" required style="width: 400px;">
        </div>
        <div style="margin-top: 1rem;">
            <label for="description">Job Description *</label><br>
            <textarea id="description" name="description" rows="8" required style="width: 600px;"></textarea>
        </div>
    </div>

    <!-- Company Information -->
    <div class="form-section">
        <h3>Company Information</h3>
        <div>
            <label for="subcompany">Subcompany</label><br>
            <input id="subcompany" name="subcompany" type="text" style="width: 400px;">
        </div>
        <div style="margin-top: 1rem;">
            <label for="office">Office</label><br>
            <input id="office" name="office" type="text" style="width: 400px;">
        </div>
        <div style="margin-top: 1rem;">
            <label for="department">Department</label><br>
            <input id="department" name="department" type="text" style="width: 400px;">
        </div>
    </div>

    <!-- Job Details -->
    <div class="form-section">
        <h3>Job Details</h3>
        <div>
            <label for="recruitingCategory">Recruiting Category</label><br>
            <input id="recruitingCategory" name="recruitingCategory" type="text" style="width: 400px;">
        </div>
        <div style="margin-top: 1rem;">
            <label for="employmentType">Employment Type</label><br>
            <select id="employmentType" name="employmentType" style="width: 400px;">
                <option value="">Select employment type...</option>
                <option value="full-time">Full-time</option>
                <option value="part-time">Part-time</option>
                <option value="contract">Contract</option>
                <option value="temporary">Temporary</option>
                <option value="internship">Internship</option>
                <option value="freelance">Freelance</option>
            </select>
        </div>
        <div style="margin-top: 1rem;">
            <label for="schedule">Schedule</label><br>
            <select id="schedule" name="schedule" style="width: 400px;">
                <option value="">Select schedule...</option>
                <option value="day">Day shift</option>
                <option value="night">Night shift</option>
                <option value="rotating">Rotating shifts</option>
                <option value="flexible">Flexible</option>
                <option value="remote">Remote</option>
                <option value="hybrid">Hybrid</option>
            </select>
        </div>
    </div>

    <!-- Experience & Skills -->
    <div class="form-section">
        <h3>Experience & Skills</h3>
        <div>
            <label for="seniority">Seniority Level</label><br>
            <select id="seniority" name="seniority" style="width: 400px;">
                <option value="">Select seniority level...</option>
                <option value="entry">Entry Level</option>
                <option value="junior">Junior</option>
                <option value="mid">Mid-level</option>
                <option value="senior">Senior</option>
                <option value="lead">Lead</option>
                <option value="principal">Principal</option>
                <option value="executive">Executive</option>
            </select>
        </div>
        <div style="margin-top: 1rem;">
            <label for="yearsOfExperience">Years of Experience</label><br>
            <select id="yearsOfExperience" name="yearsOfExperience" style="width: 400px;">
                <option value="">Select experience level...</option>
                <option value="0-1">0-1 years</option>
                <option value="1-3">1-3 years</option>
                <option value="3-5">3-5 years</option>
                <option value="5-7">5-7 years</option>
                <option value="7-10">7-10 years</option>
                <option value="10+">10+ years</option>
            </select>
        </div>
        <div style="margin-top: 1rem;">
            <label for="keywords">Keywords/Skills</label><br>
            <textarea id="keywords" name="keywords" rows="3" style="width: 600px;" placeholder="Enter relevant skills, technologies, or keywords (comma-separated)"></textarea>
        </div>
    </div>

    <!-- Occupation Details -->
    <div class="form-section">
        <h3>Occupation Details</h3>
        <div>
            <label for="occupation">Occupation</label><br>
            <input id="occupation" name="occupation" type="text" style="width: 400px;" placeholder="e.g., Software Engineer, Marketing Manager">
        </div>
        <div style="margin-top: 1rem;">
            <label for="occupationCategory">Occupation Category</label><br>
            <select id="occupationCategory" name="occupationCategory" style="width: 400px;">
                <option value="">Select occupation category...</option>
                <option value="technology">Technology</option>
                <option value="marketing">Marketing</option>
                <option value="sales">Sales</option>
                <option value="finance">Finance</option>
                <option value="human-resources">Human Resources</option>
                <option value="operations">Operations</option>
                <option value="engineering">Engineering</option>
                <option value="design">Design</option>
                <option value="product">Product</option>
                <option value="customer-support">Customer Support</option>
                <option value="legal">Legal</option>
                <option value="other">Other</option>
            </select>
        </div>
    </div>

    <div style="margin-top: 2rem;">
        <button type="submit" style="padding: 10px 20px; font-size: 16px;">Submit Job Posting</button>
    </div>
    
    <p class="muted">Job will be posted using your account email: <strong>{{ app.user.email }}</strong></p>
</form>

<style>
.form-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    background-color: #fafafa;
}

.form-section h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: #333;
    border-bottom: 2px solid #007bff;
    padding-bottom: 0.5rem;
}

label {
    font-weight: 600;
    color: #555;
}

input, select, textarea {
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
}

input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
}

button[type="submit"] {
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s;
}

button[type="submit"]:hover {
    background-color: #0056b3;
}

.muted {
    color: #6c757d;
    font-size: 14px;
    margin-top: 1rem;
}
</style>
{% endblock %}


