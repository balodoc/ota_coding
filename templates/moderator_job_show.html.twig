{% extends 'base.html.twig' %}

{% block title %}Review: {{ job.title }} · Moderator{% endblock %}

{% block body %}
<h1>Review Job</h1>
<div class="card">
    <h2>{{ job.title }}</h2>
    <div class="muted">Poster: {{ job.posterEmail }} · Created {{ job.createdAt|date('Y-m-d H:i') }}</div>
    <article style="margin-top:1rem;">{{ job.description|raw }}</article>
    <form method="post" action="{{ path('moderator_job_approve', {id: job.id}) }}" style="display:inline-block; margin-right:.5rem;">
        <button type="submit">Approve</button>
    </form>
    <form method="post" action="{{ path('moderator_job_reject', {id: job.id}) }}" style="display:inline-block;">
        <button type="submit">Reject</button>
    </form>
</div>
{% endblock %}


